<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDDA30"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Controller.CheatActivity">

    <TextView
        android:id="@+id/txt_questioncheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/questioncheat_text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_answerofquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_nocheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nocheat_button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_yescheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yescheat_button"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>